{
  "name": "coinchounet",
  "version": "1.0.0",
  "private": true,
  "description": "Utilities for serving the Turn-Based Card Game API specification",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "swagger:ui": "npx swagger-ui-watcher specs/openapi.yaml --port 8080 --title 'Turn-Based Card Game API'",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-toast": "^1.1.3",
    "@tanstack/react-query": "^5.35.7",
    "i18next": "^23.11.5",
    "lucide-react": "^0.378.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.5",
    "react-i18next": "^14.1.3",
    "react-router-dom": "^6.23.1",
    "socket.io-client": "^4.7.5",
    "zustand": "^5.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.4.5",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
